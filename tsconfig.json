{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noImplicitAny": true,
    "diagnostics": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "moduleResolution": "node",
	"module": "ES2022",
    "target": "es2020"
  },
  "include": ["index.js", "src/*.js"],
  "exclude": ["node_modules"]
}
