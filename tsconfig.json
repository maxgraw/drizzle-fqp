{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": true,
    "declaration": true,
    "declarationDir": "types",
    "declarationMap": true,
    "noImplicitAny": true,
    "diagnostics": true,
    "noImplicitThis": true,
    "noEmitOnError": true,
    "noEmit": true,
    "moduleResolution": "node",
    "module": "ES2022",
    "target": "es2020",
    "skipLibCheck": true,
    "strict": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
